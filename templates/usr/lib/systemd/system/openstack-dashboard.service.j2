[Unit]
Description=uWSGI instance to serve Horizon dashboard
After=network.target syslog.target

[Service]
ExecStart={{ horizon_uwsgi_path }} --emperor /etc/uwsgi.d/horizon
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
Restart=always
RestartSec=5
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
