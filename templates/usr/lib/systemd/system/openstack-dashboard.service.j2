[Unit]
Description=OpenStack Dashboard (code-named Horizon)
After=network.target syslog.target

[Service]
ExecStart={{ horizon_uwsgi_path }} --emperor /etc/uwsgi.d/horizon --mimefile /etc/mime.types
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
Restart=always
RestartSec=5
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
